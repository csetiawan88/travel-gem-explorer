<div class='container mt-5'>
  <div class='row justify-content-center'>
    <div class='col-lg-11 col-sm-12'>
      <div class='row'>
        <div class='col-lg-8 col-md-12'>
          <div class='title title-overlay'>
            <p>{{name}}</p>
          </div>
          <div class='image-container'>
            <img
              src='{{image_source}}'
              alt='{{name}}'
              style='max-width: 100%; height: 100%; object-fit: cover;'
            />
          </div>
          <div class='content-container'>
            <br />
            <h5>{{location}}</h5>
            <p>{{description}}</p>
          </div>

          <div class='comments-container mt-4 p-3'>
            {{#each comments}}
              <div class='comment'>
                <p>
                  <strong>{{userName}}</strong>: {{comment}}
                  {{#if isOwnComment}}
                    <span id="delete-btn" data-id={{id}} class="delete-icon">
                      <img src="/images/icons8-delete-50.png" alt="delete_icon" data-id={{id}}>
                    </span>
                  {{/if}}
                </p>
              </div>
            {{/each}}
          </div>

          <div class='comment-container mt-4 comment-form'>
            {{#if loggedIn}}
              <form id='comment-form' method='POST'>
                <div class='form-group'>
                  <label for='comment'>Add a Comment:</label>
                  <textarea
                    class='form-control'
                    id='comment-textarea'
                    rows='3'
                  ></textarea>
                </div>
                <button type='submit' class='btn button'>Submit Comment</button>
              </form>
            {{else}}
              <p>You must be logged in to add a comment.</p>
            {{/if}}
          </div>
        </div>

        <div class='col-lg-4 sidebar'>
          <div class='side-box text-center'>
            <h4>explore more</h4>
            <br />

            <div class='destination-links'>
              <div class='card-deck'>

                {{#each latestDestinations}}
                  <div class='card sidebar-card mb-1'>
                    <div
                      class='card-image'
                      style="background-image: url('{{image_source}}');"
                    ></div>
                    <div class='card-body'>
                      <a
                        href='/api/destinations/{{id}}'
                        class='card-link'
                      >{{name}}</a>
                    </div>
                  </div>
                {{/each}}
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src='/js/add-comment.js'></script>