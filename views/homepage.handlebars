<div class="jumbotron jumbotron-fluid text-black bg-transparent header">
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-md-8 text-right">
                <br>
                <br>
                <h1 class="display-4">travel gem explorer</h1>
                <br>
                <p class="lead text-white quote">"Seek the beauty in the unnoticed, the extraordinary in the familiar, and the magic in the mundane."</p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5" id="destination-cards">
  <h1>explore</h1>
  <div class="row row-cols-1 row-cols-md-2 g-4">
    {{#each destinations as |destination|}}
    {{> where-to-go}}
    {{/each}}
  </div>
</div>

{{#if loggedIn}}
<div class="container my-4">
    <div class="row">
        <div class="col-md-12 d-flex justify-content-end">
            <button class="btn button" data-toggle="modal" data-target="#addNewModal">Add New Destination</button>
            {{> add-new}}
        </div>
    </div>
</div>
{{/if}}

